<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Math Exercise"
        android:textColor="@color/teal_700"
        android:textSize="50sp"
        android:id="@+id/mathExercise"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user: "
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:id="@+id/userAnswer"/>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="score: 0"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:id="@+id/score"
        />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity"
        android:layout_marginTop="30dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:text="לוח הכפל"
            android:id="@+id/bMltb"

            android:backgroundTint="@color/gray"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:backgroundTint="@color/gray"
            android:id="@+id/xTill20"
            android:text="כפולות עד 20" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text= "אתגר"
            android:id="@+id/challenge"
            android:backgroundTint="@color/gray"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/firstNum"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:background="@color/teal_200"
            android:gravity="center"            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/multiply1"
            android:text="X"

            android:textColor="@color/black"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@color/teal_200"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/secNum"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:background="@color/teal_200"
            android:layout_marginTop="8dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="="
            android:id="@+id/equals"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@color/teal_200"
            android:layout_marginTop="8dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:hint="Answer"

            android:inputType="number"
            android:id="@+id/answer"
            android:textColorHint="@color/black"
            android:background="@color/teal_200"
            android:layout_marginTop="8dp"
            android:gravity="center"
            />
        <Button
            android:backgroundTint="@color/gray"
            android:layout_width="match_parent"
            android:id="@+id/check"
            android:layout_height="50dp"
            android:text="Check"
            />


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/save"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Show all users"
        android:id="@+id/showUsers"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/teal_700"
        />
</LinearLayout>