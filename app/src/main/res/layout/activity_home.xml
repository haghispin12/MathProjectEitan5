<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".HomeActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Guess Who"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="vertical"

        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start an online game"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            android:id="@+id/onlineGame"

            />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="create a game with friends"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_200"
            android:id="@+id/friendsGame"

            />

        <EditText
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/showCode"
            android:visibility="gone"
            android:textColor="@color/black"

            />
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="join game"
            android:layout_gravity="center"
            android:backgroundTint="@color/gray"
            android:id="@+id/joinGame"

            />


        <EditText
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Game Id"
            android:layout_gravity="center"
            android:backgroundTint="@color/gray"
            android:id="@+id/enterID"
            android:visibility="invisible"
            />

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center"
            android:backgroundTint="@color/gray"
            android:id="@+id/SubmitJoin"
            android:visibility="invisible"


            />
    </LinearLayout>



</LinearLayout>



